<%= form_with(model: school) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label 'Имя', class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit 'Обновить школу', class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Отмена", schools_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to "Отмена", school_path(@school), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
