<!-- app/views/devise/sessions/new.html.erb -->
<%= render "auth_layout" do %>
  <h1 class="text-3xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight mb-6">Войти</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label 'Ваш токен или email', class: "form-label" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <div class="flex items-center justify-between mb-2">
        <%= f.label 'Пароль', class: "form-label mb-0" %>

        <div class="inline prose prose-sm prose-zinc dark:prose-invert">
          <p>(не требуется, если вы ввели ваш токен)</p>
        </div>
      </div>

      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="flex flex-wrap justify-between items-center form-group">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "form-input-checkbox" %>
          <%= f.label 'Запомнить меня', class: "form-check-label ml-2" %>
        </div>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Забыли Ваш пароль?", new_password_path(resource_name), class: "btn-link text-sm" %>
      <% end %>
    </div>

    <%= f.submit "Войти", class: "btn btn-primary hover:cursor-pointer w-full" %>

    <div class="prose prose-sm text-center prose-zinc mt-6 dark:prose-invert">
      <p>Ещё не зарегистрированы? <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "btn-link" %>.</p>
    </div>
  <% end %>
<% end %>
