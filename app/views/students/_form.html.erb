<%= form_with(model: student, url: students_path, method: 'post') do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label 'Имя', class: "form-label" %>
    <%= form.text_field :first_name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label 'Фамилия', class: "form-label" %>
    <%= form.text_field :surname, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label 'Отчество', class: "form-label" %>
    <%= form.text_field :last_name, class: "form-input" %>
  </div>

  <% if  %>
    
  <div class="form-group">
    <%= form.label 'Учебная группа', class: "form-label" %>
    <%= form.collection_select :class_id, @study_groups, :id, :name, { prompt: 'Выберите класс' }, { class: "form-select", "aria-label": "Default select example"} %>
  </div>
  <% end %>

  <% if  %>
    
  <div class="form-group">
    <%= form.label 'Школа', class: "form-label" %>
    <%= form.collection_select :school_id, @schools, :id, :name, { prompt: 'Выберите школу' }, { class: "form-select", "aria-label": "Default select example" } %>
  </div>
  <% end %>

  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit 'Подтвердить', class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Отмена", students_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to "Отмена", student_path(@student), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
